@model SistemaUTH.Models.Estudiante

@{
    ViewData["Title"] = "Crear";
}

<h2>Nuevo Estudiante</h2>

<h4>Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            
            <div class="form-group">
                <label asp-for="Matricula" class="control-label">Matricula</label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Ap_paterno" class="control-label">Apellido Paterno</label>
                <input asp-for="Ap_paterno" class="form-control" />
                <span asp-validation-for="Ap_paterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ap_materno" class="control-label">Apellido Materno</label>
                <input asp-for="Ap_materno" class="form-control" />
                <span asp-validation-for="Ap_materno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
